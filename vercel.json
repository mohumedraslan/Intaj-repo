{
  "version": 2,
  "builds": [
    {
      "src": "src/**/*.ts",
      "use": "@vercel/node"
    },
    {
      "src": "src/app/**/*.tsx",
      "use": "@vercel/next"
    }
  ],
  "routes": [
    {
      "src": "/api/(.*)",
      "dest": "src/app/api/$1"
    },
    {
      "src": "/(.*)",
      "dest": "src/app/$1"
    }
  ],
  "env": {
    "SUPABASE_URL": "@supabase_url",
    "SUPABASE_ANON_KEY": "@supabase_anon_key",
    "SUPABASE_SERVICE_ROLE_KEY": "@supabase_service_role_key",
    "INTERNAL_ADMIN_KEY": "@internal_admin_key",
    "OPENROUTER_API_KEY": "@openrouter_api_key"
  }
}

'use client';

import React from 'react';
import ConnectionCard from '@/components/connections/ConnectionCard';
import AvailableConnectionCard from '@/components/connections/AvailableConnectionCard';

export default function ConnectionsPage() {
  // Animation functions
  const animateConnectionStatus = () => {
    const statusElements = document.querySelectorAll('.animate-pulse');
    statusElements.forEach(element => {
      if (Math.random() > 0.8) {
        const htmlElement = element as HTMLElement;
        htmlElement.style.opacity = '0.5';
        setTimeout(() => {
          htmlElement.style.opacity = '1';
        }, 200);
      }
    });
  };

  React.useEffect(() => {
    // Update every 3 seconds
    const interval = setInterval(animateConnectionStatus, 3000);
    return () => clearInterval(interval);
  }, []);

  return (
    <div className="relative min-h-screen">
      <div className="pb-8">
        {/* Main Content */}
        <div className="flex-1 flex flex-col">
          {/* Top Bar */}
        <header className="bg-[#141517] border-b border-gray-700/50 px-8 py-4">
          <div className="flex items-center justify-between">
            <div>
              <h1 className="text-2xl font-bold text-white">Connections</h1>
              <p className="text-gray-400">Manage your channel integrations and platform connections</p>
            </div>
            <div className="flex items-center space-x-4">
              {/* Connection Status */}
              <div className="flex items-center space-x-2 px-4 py-2 bg-[#1f2024] rounded-lg">
                <div className="w-2 h-2 bg-green-500 rounded-full animate-pulse"></div>
                <span className="text-sm text-gray-300">3 Connected</span>
              </div>
              {/* Add Connection */}
              <button className="bg-gradient-to-r from-blue-600 to-purple-600 hover:from-blue-700 hover:to-purple-700 px-4 py-2 rounded-lg text-white font-medium hover:opacity-90 transition-opacity flex items-center space-x-2">
                <svg className="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path strokeLinecap="round" strokeLinejoin="round" strokeWidth={2} d="M12 6v6m0 0v6m0-6h6m-6 0H6" />
                </svg>
                <span>Add Connection</span>
              </button>
            </div>
          </div>
        </header>

        {/* Connections Content */}
        <main className="flex-1 overflow-y-auto bg-[#0a0a0b] p-8">
          {/* Connection Status Overview */}
          <div className="grid grid-cols-1 md:grid-cols-3 gap-6 mb-8">
            {/* Connected Card */}
            <div className="bg-[#141517]/80 backdrop-blur-md p-6 rounded-2xl border border-blue-500/10">
              <div className="flex items-center justify-between mb-4">
                <div className="w-12 h-12 bg-green-500/20 rounded-xl flex items-center justify-center">
                  <svg className="w-6 h-6 text-green-500" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path strokeLinecap="round" strokeLinejoin="round" strokeWidth={2} d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z" />
                  </svg>
                </div>
                <div className="text-2xl font-bold text-green-500">3</div>
              </div>
              <div className="text-lg font-semibold text-white">Connected</div>
              <div className="text-gray-400 text-sm">Active integrations</div>
            </div>

            {/* Syncing Card */}
            <div className="bg-[#141517]/80 backdrop-blur-md p-6 rounded-2xl border border-blue-500/10">
              <div className="flex items-center justify-between mb-4">
                <div className="w-12 h-12 bg-yellow-500/20 rounded-xl flex items-center justify-center">
                  <svg className="w-6 h-6 text-yellow-500 animate-spin-slow" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path strokeLinecap="round" strokeLinejoin="round" strokeWidth={2} d="M4 4v5h.582m15.356 2A8.001 8.001 0 004.582 9m0 0H9m11 11v-5h-.581m0 0a8.003 8.003 0 01-15.357-2m15.357 2H15" />
                  </svg>
                </div>
                <div className="text-2xl font-bold text-yellow-500">1</div>
              </div>
              <div className="text-lg font-semibold text-white">Syncing</div>
              <div className="text-gray-400 text-sm">In progress</div>
            </div>

            {/* Available Card */}
            <div className="bg-[#141517]/80 backdrop-blur-md p-6 rounded-2xl border border-blue-500/10">
              <div className="flex items-center justify-between mb-4">
                <div className="w-12 h-12 bg-blue-500/20 rounded-xl flex items-center justify-center">
                  <svg className="w-6 h-6 text-blue-500 animate-pulse" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path strokeLinecap="round" strokeLinejoin="round" strokeWidth={2} d="M13.828 10.172a4 4 0 00-5.656 0l-4 4a4 4 0 105.656 5.656l1.102-1.101m-.758-4.899a4 4 0 005.656 0l4-4a4 4 0 00-5.656-5.656l-1.1 1.1" />
                  </svg>
                </div>
                <div className="text-2xl font-bold text-blue-500">2</div>
              </div>
              <div className="text-lg font-semibold text-white">Available</div>
              <div className="text-gray-400 text-sm">Ready to connect</div>
            </div>
          </div>

          {/* Active Connections */}
          <div className="mb-8">
            <h2 className="text-2xl font-bold text-white mb-6 flex items-center space-x-2">
              <svg className="w-6 h-6 text-green-500" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path strokeLinecap="round" strokeLinejoin="round" strokeWidth={2} d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z" />
              </svg>
              <span>Active Connections</span>
            </h2>
            
            <div className="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
              <ConnectionCard 
                name="Website Chat"
                type="Support Bot"
                status="Connected"
                stats={{
                  chats: "125",
                  response: "1.1s avg"
                }}
                color="blue"
                icon="/globe.svg"
              />

              <ConnectionCard 
                name="Facebook Messenger"
                type="Sales Bot"
                status="Connected"
                stats={{
                  messages: "67",
                  conversion: "32%"
                }}
                color="blue"
                icon="/facebook.png"
              />

              <ConnectionCard 
                name="Instagram DM"
                type="Marketing Bot"
                status="Syncing"
                stats={{
                  interactions: "89",
                  rating: "4.8/5"
                }}
                color="purple"
                icon="/instagram.png"
              />
            </div>
          </div>

          {/* Available Connections */}
          <div>
            <h2 className="text-2xl font-bold text-white mb-6 flex items-center space-x-2">
              <svg className="w-6 h-6 text-blue-500" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path strokeLinecap="round" strokeLinejoin="round" strokeWidth={2} d="M12 6v6m0 0v6m0-6h6m-6 0H6" />
              </svg>
              <span>Available Connections</span>
            </h2>
            
            <div className="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-6">
              <AvailableConnectionCard 
                name="WhatsApp"
                description="Connect your WhatsApp Business account"
                color="green"
                available={true}
                icon="/whatsapp.png"
              />
              
              <AvailableConnectionCard 
                name="Telegram"
                description="Create powerful bots for your channels"
                color="blue"
                available={false}
                icon="/telegram.png"
              />
              
              <AvailableConnectionCard 
                name="Discord"
                description="Build community bots for your servers"
                color="indigo"
                available={false}
                icon="/discord.png"
              />
              
              <AvailableConnectionCard 
                name="Slack"
                description="Automate workflows in your workspace"
                color="purple"
                available={false}
                icon="/slack.png"
              />
            </div>
          </div>

          {/* Connection Tutorial */}
          <div className="mt-8 bg-[#141517]/80 backdrop-blur-md p-6 rounded-2xl border border-blue-500/10">
            <div className="flex items-start space-x-4">
              <div className="w-12 h-12 bg-gradient-to-r from-blue-600 to-purple-600 rounded-xl flex items-center justify-center flex-shrink-0">
                <svg className="w-6 h-6 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path strokeLinecap="round" strokeLinejoin="round" strokeWidth={2} d="M13 16h-1v-4h-1m1-4h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z" />
                </svg>
              </div>
              <div className="flex-1">
                <h3 className="text-xl font-bold text-white mb-2">How to Connect a New Platform</h3>
                <p className="text-gray-400 mb-4">Follow these simple steps to add a new channel integration:</p>
                <div className="grid md:grid-cols-3 gap-4 text-sm">
                  <div className="flex items-center space-x-2">
                    <div className="w-6 h-6 bg-blue-500 rounded-full flex items-center justify-center text-white font-bold text-xs">1</div>
                    <span className="text-gray-300">Click &quot;Connect&quot; on your desired platform</span>
                  </div>
                  <div className="flex items-center space-x-2">
                    <div className="w-6 h-6 bg-purple-500 rounded-full flex items-center justify-center text-white font-bold text-xs">2</div>
                    <span className="text-gray-300">Authenticate using OAuth login</span>
                  </div>
                  <div className="flex items-center space-x-2">
                    <div className="w-6 h-6 bg-cyan-500 rounded-full flex items-center justify-center text-white font-bold text-xs">3</div>
                    <span className="text-gray-300">Configure your bot settings</span>
                  </div>
                </div>
              </div>
            </div>
          </div>
        </main>
      </div>
    </div>
  );
}
